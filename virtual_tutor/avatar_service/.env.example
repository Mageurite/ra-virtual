# Environment Variables for Avatar AI Engine

# ============================================================================
# Service Configuration
# ============================================================================
PORT=8001
SERVICE_NAME=avatar-ai-engine

# ============================================================================
# LLM Configuration (Ollama)
# ============================================================================
OLLAMA_BASE_URL=http://localhost:11434
LLM_DEFAULT_MODEL=mistral-nemo:12b-instruct-2407-fp16
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# Enable/Disable Features
ENABLE_STREAMING=true
GUARDRAIL_ENABLED=true

# ============================================================================
# Avatar Service Configuration (Mageurite)
# ============================================================================
LIPSYNC_SERVICE_URL=http://localhost:8615
TTS_SERVICE_URL=http://localhost:8604

# Service Timeouts (seconds)
LIPSYNC_TIMEOUT=300
TTS_TIMEOUT=60
AVATAR_CREATE_TIMEOUT=300

# ============================================================================
# TTS Configuration
# ============================================================================
# Default TTS Engine (edge-tts, cosyvoice, gpt-sovits)
DEFAULT_TTS_ENGINE=edge-tts
DEFAULT_VOICE=zh-CN-XiaoxiaoNeural
DEFAULT_RATE=1.0
DEFAULT_VOLUME=1.0

# TTS Cache
TTS_ENABLE_CACHE=true
TTS_CACHE_DIR=/tmp/tts_cache

# Audio Settings
AUDIO_FORMAT=wav
SAMPLE_RATE=16000

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ORIGINS=*

# ============================================================================
# Optional: Web Backend API (for metadata queries)
# ============================================================================
# WEB_BACKEND_URL=http://localhost:8000
# WEB_BACKEND_API_KEY=your-api-key
